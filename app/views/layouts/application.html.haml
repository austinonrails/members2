!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Austin on Rails: Members'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Members2'}"}
    = stylesheet_link_tag 'application', media: 'all'#, 'data-turbolinks-track' => true
    -# Modernizr is required for Zurb Foundation
    = javascript_include_tag 'vendor/modernizr'
    = javascript_include_tag 'application'#, 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/top_bar'
      .row.subheader
        = yield(:subheader)
    %main{:role => "main"}
      = render 'layouts/messages'
      = yield
      - unless current_user.try(:signed_in?)
        #signin-modal.reveal-modal{ 'data-reveal' => true }

