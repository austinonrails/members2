.row.modal-header
  .large-12.columns{ style: 'margin:0; padding:0;' }
    %h2 Sign in to AoR Members
    = devise_error_messages!

.row.content-body
  .large-12.columns
    = simple_form_for resource, as: resource_name, url: session_path(resource_name), html: { role: 'form' } do |f|
      = f.input :email, required: true, placeholder: 'Email address', input_html: { autofocus: true, class: 'form-control' }

      = f.input :password, required: true, placeholder: 'Password', input_html: { class: 'form-control' }

      = f.button :submit, 'Sign In'
      - if devise_mapping.rememberable?
        = f.input :remember_me, label: 'Remember me', as: :boolean

.row.modal-footer
  .large-12.columns{ style: 'margin:0; padding:0;' }
    - if devise_mapping.registerable?
      .new-user
        %span New to Austin on Rails?
        = link_to 'Join Us', new_registration_path(resource_name)
    - if devise_mapping.recoverable?
      .forgot-password
        = link_to 'Forgot your password?', new_password_path(resource_name)
